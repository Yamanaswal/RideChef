<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RideChef" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/button_red</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- BUTTON STYLE -->
    <style name="buttonStyleRed" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/airbnb_cereal_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/round_button_red_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- BUTTON STYLE -->
    <style name="buttonStyleBrown" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="fontFamily">@font/airbnb_cereal_book</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/round_brown_edit_text</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- ROUNDED IMAGE   -->
    <style name="roundedImageViewRounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>